{
  "name": "astrobot",
  "version": "2.0.0",
  "description": "Personal AI assistant with OpenRouter backend, Telegram interface, and specialist agent orchestration.",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "migrate": "tsx src/migrate.ts"
  },
  "dependencies": {
    "cron-parser": "^5.5.0",
    "dockerode": "^4.0.4",
    "grammy": "^1.35.0",
    "openai": "^4.85.0",
    "pg": "^8.13.1",
    "pgvector": "^0.2.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.34",
    "@types/node": "^22.10.0",
    "@types/pg": "^8.11.11",
    "@vitest/coverage-v8": "^4.0.18",
    "prettier": "^3.8.1",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20"
  }
}
